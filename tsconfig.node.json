{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": false,
    "allowJs": false
  },
  "include": ["src/api/validate.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
