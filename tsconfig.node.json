{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": false,
    "types": ["node"]
  },
  "include": ["src/api/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
